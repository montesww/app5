<?xml version="1.0" encoding="utf-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id ="com.phonegap.app5"
  version = "1.0.0">
  
  <name> app5-Notificaciones del dispositivo 2018 </name> 
  
  <description>
    Aplicacion que realiza la vibracion y beep del dispositivo
  </description>
  
  <author href= "http://buil.phonegap.com" email="josealejomonteslopez@gmail.com">
  Jose Alejo Montes Lopez 
  </author>
  
  <!-- Personaliza la aplicaciom y plataforma -->
  <preference name="orientation"      value="default" />
  <!-- <preferece name="orientation"   value="portrait" />
  <preferece name="orientation" value="landscape"/>-->
  <preference name="target-device"   value="universas"/>
  <preference name="fullscreen"    value="true"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="permissions" value="INTERNET"/>
  
  <!-- Plugins -->
  <!-- Core plugins -->
  <plugin name="cordova-plugin-device" spec"~1.1.4"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogos" spec="~1.3.1"/>
  
  <!-- <plugin name="cordova-plugin-geolocation" source="npm" />-->
    <!-- Colocar icono app-->
	
<icon src="res/android/mdpi.png"/>

</widget>
  
  